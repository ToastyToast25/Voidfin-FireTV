<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/donate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/donate_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:textColor="?android:attr/textColorSecondary" />

        <ImageView
            android:id="@+id/donate_qr_code"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:background="@android:color/white"
            android:padding="16dp"
            android:contentDescription="Donation QR Code" />

        <TextView
            android:id="@+id/donate_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://buymeacoffee.com/voidstream"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/donate_thanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingTop="24dp"
            android:lineSpacingExtra="4dp"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</ScrollView>
