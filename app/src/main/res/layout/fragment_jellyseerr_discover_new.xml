<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/jellyseerr_discover_new"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/transparent">

	<!-- Backdrop Overlay (dark gradient) - backdrop handled by BackgroundService with blur -->
	<View
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/gradient_backdrop_overlay"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<!-- Title at 80dp from top -->
	<TextView
		android:id="@+id/title_text"
		android:layout_width="917dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="50dp"
		android:layout_marginTop="80dp"
		android:ellipsize="end"
		android:fontFamily="sans-serif-medium"
		android:letterSpacing="0.02"
		android:lineSpacingExtra="2dp"
		android:maxLines="1"
		android:text=""
		android:textAllCaps="false"
		android:textColor="@android:color/white"
		android:textSize="22sp"
		android:textStyle="bold"
		android:shadowColor="#000000"
		android:shadowDx="0"
		android:shadowDy="2"
		android:shadowRadius="4"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<!-- Metadata Row at 112dp from top -->
	<LinearLayout
		android:id="@+id/metadata_row"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="50dp"
		android:layout_marginTop="112dp"
		android:orientation="horizontal"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<!-- Year -->
		<TextView
			android:id="@+id/year_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:textColor="@color/white"
			android:shadowColor="#000000"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="3"
			android:visibility="gone" />

		<!-- Rating -->
		<TextView
			android:id="@+id/rating_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="12dp"
			android:textSize="14sp"
			android:textColor="@color/white"
			android:shadowColor="#000000"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="3"
			android:visibility="gone" />

		<!-- Media Type -->
		<TextView
			android:id="@+id/media_type_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="12dp"
			android:textSize="14sp"
			android:textColor="@color/white"
			android:shadowColor="#000000"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="3"
			android:visibility="gone" />

	</LinearLayout>

	<!-- Summary at 136dp from top -->
	<TextView
		android:id="@+id/summary_text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="50dp"
		android:layout_marginEnd="30dp"
		android:layout_marginTop="136dp"
		android:ellipsize="end"
		android:maxLines="4"
		android:text=""
		android:textColor="@android:color/white"
		android:textSize="14sp"
		android:shadowColor="#000000"
		android:shadowDx="0"
		android:shadowDy="1"
		android:shadowRadius="3"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<!-- Leanback Rows Fragment Container at 187dp from top (20% lower: 156 * 1.2 â‰ˆ 187), fills remaining space -->
	<androidx.fragment.app.FragmentContainerView
		android:id="@+id/jellyseerr_browse"
		android:name="org.jellyfin.androidtv.ui.jellyseerr.JellyseerrDiscoverRowsFragment"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="187dp"
		android:nextFocusLeft="@id/sidebar_overlay"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<!-- Top Toolbar using Compose -->
	<androidx.compose.ui.platform.ComposeView
		android:id="@+id/top_toolbar_overlay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:elevation="8dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<!-- Left Sidebar using Compose -->
	<androidx.compose.ui.platform.ComposeView
		android:id="@+id/sidebar_overlay"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:elevation="8dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
